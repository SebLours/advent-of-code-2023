{
    "name": "adventofcode/2023",
    "description": "Advent of code 2023 (PHP)",
    "type": "project",
    "license": "Apache-2.0",
    "require": {
        "php": "^8.3",
        "loophp/collection": "^7.2",
        "symfony/config": "^7.0",
        "symfony/console": "^7.0",
        "symfony/dependency-injection": "^7.0",
        "webmozart/assert": "^1.11"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "sylius-labs/coding-standard": "^4.3",
        "symfony/var-dumper": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "AdventOfCode\\": "src/",
            "AdventOfCode\\Tests\\": "tests/"
        }
    },
    "extra": {
        "application": {
            "name": "2023 Advent of Code",
            "version": "day:02"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": false
        }
    },
    "scripts": {
        "tests": "phpunit",
        "ecs": "ecs check --ansi --no-progress-bar",
        "ecs-fix": "ecs check --fix --ansi"
    }
}
